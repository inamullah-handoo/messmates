<div class="form">
    <form method="POST" action="/users/login" class="w-50 mx-auto">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control w-75 ml-auto" name="username">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'username'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control w-75 ml-auto" name="password">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'password'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success mt-2 form-control w-75 text-uppercase">Login</button>
        </div>
    </form>
</div>