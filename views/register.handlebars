{{#if err}}
<div class="alert alert-danger">{{err}}</div>
{{/if}}
<div class="form">
    <form method="POST" action="/users/register" class="w-50 mx-auto">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control w-75 ml-auto" name="name">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'name'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control w-75 ml-auto" name="username">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'username'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control w-75 ml-auto" name="email">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'email'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control w-75 ml-auto" name="password">
            <small>Minimum 8 charachters</small>
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'password'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="consfirmPassword">Confirm Password</label>
            <input type="password" class="form-control w-75 ml-auto" name="password2">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'password2'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success mt-2 form-control w-75 text-uppercase">Register</button>
        </div>
    </form>
</div>