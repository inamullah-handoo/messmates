<div class="form">
    <form method="POST" action="/addItem" class="w-50 mx-auto">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control w-75 ml-auto" name="date" id="date">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'date'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="itemName">Item Name</label>
            <input type="text" class="form-control w-75 ml-auto" name="itemName">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'itemName'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="itemPrice">Item Price (Total)</label>
            <input type="number" class="form-control w-75 ml-auto" name="itemPrice">
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'itemPrice'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <label for="paidBy">PaidBy</label>
            <select class="form-control w-75 ml-auto" name="paidBy">
                {{#each peoples}}
                    <option value="{{person}}">{{person}}</option>
                {{/each}}
            </select>
            {{#if errors}}
                {{#each errors}}
                    {{#ifCond param 'paidBy'}}
                        <small class="text-danger">*{{msg}}</small>
                    {{/ifCond}}
                {{/each}}
            {{/if}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success mt-2 form-control w-75 text-uppercase">Add</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(() => {
        // display current date
        var today = [Date().substr(8,2), Date().substr(4,3), Date().substr(11,4)];
        switch(Date().substr(4,3)){
            case 'Jan':
                today[1] = '01';
                break;
            case 'Feb':
                today[1] = '02';
                break;
            case 'Mar':
                today[1] = '03';
                break;
            case 'Apr':
                today[1] = '04';
                break;
            case 'May':
                today[1] = '05';
                break;
            case 'Jun':
                today[1] = '06';
                break;
            case 'Jul':
                today[1] = '07';
                break;
            case 'Aug':
                today[1] = '08';
                break;
            case 'Sep':
                today[1] = '09';
                break;
            case 'Oct':
                today[1] = '10';
                break;
            case 'Nov':
                today[1] = '11';
                break;
            case 'Dec':
                today[1] = '12';
                break;
        }
        $('#date')[0].value = `${today[2]}-${today[1]}-${today[0]}`;
    });
</script>